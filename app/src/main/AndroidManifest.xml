<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.techbuzz">

    <!-- âœ… Permissions must be outside <application> -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="TechBuzz"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.TechBuzz"
        >

        <activity android:name=".SignInActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SignUpActivity" />

        <activity
            android:name=".SportsNewsActivity"
            android:label="Sports News"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.TechBuzz.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".DeveloperInfoActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.Dark.NoActionBar" />
        <activity android:name=".UserInfoActivity" />
        <activity android:name=".EditUserActivity" />

    </application>
</manifest>
